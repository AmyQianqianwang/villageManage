@CHARSET "UTF-8";
/* auther LUO */

/* 统计报表菜单开始 */
.formCol{
	width:1000px;
	overflow: hidden;
}

.grid_left{
	position: relative;
	float: left;
	height: 200px;
	width: 240px;
	margin:0px 5px 10px 0px;
	overflow: hidden;
	background-color:#fff;
	border: 1px solid #ffffff;
}

.grid{
	position: relative;
	float: left;
	margin:0px 5px 10px 5px;
	height: 200px;
	width: 240px;
	overflow: hidden;
	background-color:#fff;
	border: 1px solid #ffffff;
}

.grid_right{
	position: relative;
	float: left;
	margin:0px 0px 10px 5px;
	height: 200px;
	width: 240px;
	overflow: hidden;
	background-color:#fff;
	border: 1px solid #ffffff;
}

.box{
	border: 5px solid #27AE60;
	cursor: pointer;
	height: 190px;
	line-height: 190px;
	width: 230px;
	float: left;
	position: relative;
	overflow: hidden;
	-webkit-box-shadow: 1px 1px 1px 1px #ccc;
	-moz-box-shadow: 1px 1px 1px 1px #ccc;
	box-shadow: 1px 1px 1px 1px #ccc;
}

.box .txt {
	width: 230px;
	margin-top:80px;
	font: 14pt normal Arial, sans-serif;
	font-weight:bolder;
	text-align:center;
	position: absolute;
	left: 0;
	-webkit-transition: all 300ms ease-out;
	-moz-transition: all 300ms ease-out;
	-o-transition: all 300ms ease-out;
	-ms-transition: all 300ms ease-out;	
	transition: all 300ms ease-out;
	font-family:"微软雅黑";
	color:#999999;
}

.box .caption {
	font: 12pt normal Arial, sans-serif;
	background-color: rgba(0,0,0,0.3);
	position: absolute;
	color: #fff;
	z-index: 100;
	-webkit-transition: all 300ms ease-out;
	-moz-transition: all 300ms ease-out;
	-o-transition: all 300ms ease-out;
	-ms-transition: all 300ms ease-out;	
	transition: all 300ms ease-out;
	left: 0;
}

.box .fade-caption  {
	display:none;
	opacity: 0;
	width: 230px;
	height: 190px;
	text-align: left;
	padding: 15px;
}

.box:hover .fade-caption {
	display:block;
	opacity: 1;
}
/* 统计报表菜单结束 */

/* 统计报表列表开始 */
.forTableSC #dataTable {
	border-collapse: collapse;
	width: 100%;
	font-size: 14px;
}

.forTableSC #dataTable td {
	text-align: center;
	border-collapse: collapse;
	border: 1px solid #000;
	height: 25px;
}
#dataTable .dataTableFoot td{
	text-align: right;
}

.formbar{
	margin: 10px 0;
	width: 1000px;
	height: 500px;
	background-color: #fff;
	border: dotted 1px #ddd;
	overflow: hidden;
}
/* 统计报表列表结束 */

